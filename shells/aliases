# aliases
alias grep='grep --color=auto'
alias l='ls -Fia | less'
alias la='ls -ah | less'
alias lf='ls -FA | less'
alias ll='ls -lgsAh | less'
alias lla='ls -lah | less'
alias dir='ls -AlFio | less'
alias cd..='cd ..'
alias x='exit'
alias h='history -r | less'
alias more='less'
alias ping='/sbin/ping -c 5'